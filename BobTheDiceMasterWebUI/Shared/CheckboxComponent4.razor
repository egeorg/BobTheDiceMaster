<h3>CheckboxComponent4</h3>
<input type="checkbox" @bind="@checkboxValue" name="@Name" @oninput="@UpdateCheckboxValue">
@Name Inner checkboxValue value is @checkboxValue
<br />
@Name CheckboxValue value is @CheckboxValue
<br />

@code {
    [Parameter]
    public string Name { get; set; } = "Default";
    [Parameter]
    public bool CheckboxValue
    {
        get
        {
            return checkboxValue;
        }
        set
        {
            checkboxValue = value;
        }
    }
    private bool checkboxValue;
    [Parameter]
    public EventCallback<bool> CheckboxValueChanged { get; set; }
    async Task UpdateCheckboxValue(ChangeEventArgs e)
    {
        CheckboxValue = (bool)e.Value;
        await CheckboxValueChanged.InvokeAsync((bool)e.Value);
    }
}
